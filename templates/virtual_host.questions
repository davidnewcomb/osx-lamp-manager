OLM_SERVER_NAME "Host name" "example.com"
OLM_PORT "Port number" "8080"
OLM_SERVER_ADMIN "Server admin" "webmaster@${OLM_SERVER_NAME}"
OLM_DOCUMENT_ROOT "Document root" "/usr/local/var/www/${OLM_SERVER_NAME}"
OLM_PHP_VERSION "PHP Version ($(brew list | grep php | sed 's/php@//' | tr '\n' ',' | sed 's/,$//'))" "$(brew list | grep php | sed 's/php@//' | sort -r | head -1)"
OLM_PHP_VERSION_LIB "PHP Version lib ($(find `brew --prefix php@${OLM_PHP_VERSION}`/ -name 'libphp*' | sed 's>//>/>' | tr '\n' ',' | sed 's/,$//'))" "$(find `brew --prefix php@${OLM_PHP_VERSION}`/ -name 'libphp*' | sed 's>//>/>' | head -1)"
OLM_PHP_MODULE "PHP Version module" "php${OLM_PHP_VERSION/.*/}_module"
OLM_ERROR_LOG "Error log" "/usr/local/var/log/httpd/${OLM_SERVER_NAME}-error_log"
OLM_CUSTOM_LOG "Custom log" "/usr/local/var/log/httpd/${OLM_SERVER_NAME}-access_log"
